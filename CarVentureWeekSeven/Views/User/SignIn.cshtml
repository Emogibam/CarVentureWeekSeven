@model SignInModel
@{
    ViewBag.Title = "search";
}
<h2>Sign in Form</h2>
<div class="cont">
	<div class="form-container sign-in-container">
		<form method="post">
			<h1>Sign in</h1>
			<span>or use your account</span>
			<input class="lay" type="email" placeholder="Email" asp-for="Email" name="Email" />
			<input class="lay" type="password" placeholder="Password" asp-for="Password"   name="Password"/>
			<a href="#">Forgot your password?</a>
			<input class="btn" type="submit" value="Sign In" />
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay-panel">
			<h1>Hello!</h1>
			<p>Enter your personal details and start journey with us</p>
			<input class="ghost" value="Sign Up" type="submit" asp-controller="User" asp-action="SignIn"/>
		</div>
	</div>
</div>
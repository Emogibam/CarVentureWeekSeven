<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarVentureWeekSeven</title>


    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-iconpicker/css/fontawesome-iconpicker.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-iconpicker/css/fontawesome-iconpicker.min.css/" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/lib/bootstrap/css/bootstrap-grid.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/lib/fontawesome-iconpicker/js/fontawesome-iconpicker.js"></script>
    <script src="~/lib/fontawesome-iconpicker/js/fontawesome-iconpicker.min.js"></script>
</head>
<body>


    <section class="top-container">


        <header>
            <div class="logo">
                <a href="#">CarVenture</a>
            </div>

            <input type="checkbox" class="nav-toggle" id="nav-toggle">

            <nav>
                <ul>
                    <li><a asp-controller="Home" asp-action="first">Home</a></li>
                    <li><a asp-controller="Home" asp-action="Cars">Cars</a></li>
                    <li><a asp-controller="Home" asp-action="offers">Offers</a></li>
                    <li><a asp-controller="Home" asp-action="Locations">Locations</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Contacts</a></li>
                    <li><input class="signUp  signup-buttonA" type="submit" onclick="@("window.location.href='" + @Url.Action("SignIn", "User") + "'");" value="Sign In" /> </li>                   @*<li><button class="signup-button">Sign Up</button></li>*@
                </ul>

            </nav>

            <label for="nav-toggle" class="nav-toggle-label">
                <span></span>
            </label>

        </header>



    </section>



    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer>



        <div class="wrap-footer">

            <div class="left-menu-bar">
                <p><a href="index.html">CarVenture</a></p>

                <p>Rides for the daily achievers</p>
            </div>


            <div class="sub-footer">
                <h3>Company</h3>
                <ul>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Careers</a></li>
                    <li><a href="#">Support</a></li>
                    <li><a href="#">Terms and Conditions</a></li>
                </ul>
            </div>

            <div class="sub-footer">
                <h3>Features</h3>
                <ul>
                    <li><a href="#">Vehicle Tracker</a></li>
                    <li><a href="#">iOS & Android Apps</a></li>
                    <li><a href="#">Business Trips</a></li>
                    <li><a href="#">Locations</a></li>
                </ul>
            </div>

            <div class="sub-footer">
                <h3>Contact Us</h3>
                <ul>
                    <li><a href="#">info@teamapp.com</a></li>
                    <li>(302) 555-0107</li>
                    <li>2972 Westheimer Rd. Santa Ana, Illinois 85486 </li>
                </ul>
            </div>

            <div class="sub-footer">
                <h3>Get deals and discounts</h3>
                <ul>
                    <li>Subscribe to our newsletter</li>
                </ul>

                <form action="">
                    <input type="email" class="email" placeholder="Email">
                </form>
            </div>

        </div>

        <div class="privacy">
            &copy; 2022 - CarVenture - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>




    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>
